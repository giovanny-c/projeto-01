


{% extends "views/layout.njk" %}


{% block head %}

    
    <link rel="stylesheet" href="/styles/donations/create-donation.css">
    <title>Criar doacão - {{ngo.name}} - Castanharo Telemarketing</title>

{% endblock %}

{% block content %}

        <div class="page-title">
           
                {{ngo.name}}
        </div>

        <div class="sub-title">
            Criar doação Nº: {{ngo_donation_counter.donation_number}} 
        </div>
        <div class="actual_number">
            
        </div>

        <div class="form">
            <form id="#form" action="/instituicao/{{ngo.id}}/doacao/nova/criar" method="post" enctype="multipart/form-data">

                    
                    
                <div class="item">
                        <div>
                        <input      
                            type="text" name="donor_name" value="" placeholder="Nome do Doador"/>
                        </div>
                </div>

                
                    
                <div class="item">
                        <div>
                        <input      
                            type="email" name="email" value="" placeholder="email"/>
                        </div>
                </div>
            
                    
                <div class="item">
                        <div>
                        <input      
                            type="text" name="phone" value="" placeholder="telefone"
                            onkeydown="Mask.apply(this, 'formatPhone')"/>
                        </div>
                </div>




                <div class="button"><button type="submit">Criar</button> </div>
                
                

            </form>
        </div>


        
    {# <a href="/donations/receipt/{{donation.id}}" class="button" target="_blank">Gerar Recibo</a> #}

{% endblock %}  


