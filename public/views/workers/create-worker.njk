


{% extends "views/layout.njk" %}


{% block head %}

    <link rel="stylesheet" href="/styles/donations/create-donation.css">
    <title>Criar Funcionário - Castanharo Telemarketing</title>

{% endblock %}

{% block content %}

        <div class="page-title">
           
                Criar Funcionário
        </div>

        
            
        </div>

{% if worker %}
    <div class="form">
            <form id="#form" method="POST" action="/funcionarios/{{worker.id}}/atualizar?_method=PUT"  enctype="multipart/form-data">

                    
                    
                <div class="item">
                        <div>
                        <input      
                            type="text" name="worker_name"  value="{{worker.name}}"/>
                        </div>
                </div>

 

                <div class="button"><button type="submit">Atualizar</button> </div>
                
                

            </form>
        </div>
{% endif %}
{% if not worker %}

    <div class="form">
            <form id="#form" method="POST" action="/funcionarios/criar"  enctype="multipart/form-data">

                    
                    
                <div class="item">
                        <div>
                        <input      
                            type="text" name="worker_name"  value="" placeholder="Nome do Funcionário"/>
                        </div>
                </div>

 

                <div class="button"><button type="submit">Criar</button> </div>
                
                

            </form>
        </div>

{% endif %}
        

        
    {# <a href="/donations/receipt/{{donation.id}}" class="button" target="_blank">Gerar Recibo</a> #}

{% endblock %}  


