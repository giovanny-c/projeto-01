{% extends "views/layout-login.njk" %}

{% block head %}
    <title>Foodfy - Recuperar senha</title>
    
    
{% endblock %}

{% block content %}

    <div class="title">Recuperar senha</div>

    <div class="section">             

        <form id="forgot" method="POST" action="/enviar-email-de-recuperacao" enctype="multipart/form">


                <div class="item">

                    <div class="label" >Email</div>

                    <div>
                    <input 
                     {% if error and email%}
                        class="input-error"
                     {% endif %}
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email de recuperação" 
                        value="{{user.email}}"
                        />
                    </div>

                </div>

            
                
                <div>

                    <a href="/entrar">voltar</a>
                    
    
                    <button type="submit">Recuperar</button>
                
                </div>
        
        </form>

    </div>      
    
{% endblock %}