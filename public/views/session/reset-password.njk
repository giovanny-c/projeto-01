{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy - Reset Password</title>
    
    
{% endblock %}

{% block content %}

    <div class="title">Nova Senha</div>

    <div class="section">             

        <form id="reset" method="POST" action="/reset-password">


                <div class="item">

                    <div>Email</div>

                    <div>
                    <input 
                    {% if error and email%}
                        class="input-error"
                    {% endif %}
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email" 
                        value="{{user.email}}"
                        />
                    </div>

                </div>

                
                <div class="item">

                    <div>Nova Senha</div>

                    <div>
                    <input
                    {% if error and password%}
                        class="input-error"
                    {% endif %} 
                        type="password" 
                        name="password"
                        placeholder="Digite sua senha" 
                        />
                    </div>

                </div>

                <div class="item">

                    <div>Repetir Senha</div>

                    <div>
                    <input 
                    {% if error and passwordRepeat%}
                        class="input-error"
                    {% endif %}
                        type="password" 
                        name="passwordRepeat"
                        placeholder="Repita sua senha"  
                        />
                    </div>

                </div>
                
                <input type="hidden" name="token" value="{{token}}">{#token da url, Ã© pego no controller#}


                <div>

                    <div></div>
    
                    <button type="submit">Nova Senha</button>
                
                </div>
        
        </form>

    </div>      
    
{% endblock %}